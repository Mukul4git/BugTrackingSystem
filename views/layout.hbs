      <a class="nav-item nav-link active" href="/#" style="color: #ffffff;">{{user.username}}</a>
      <a class="nav-item nav-link active" href="/auth/logout" style="color: #ffffff;">Logout</a>

      {{else}}

      <a class="nav-item nav-link active" href="/auth/login" style="color: #ffffff;">Login</a>
