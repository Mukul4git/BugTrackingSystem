  {{#if user}}

  <a class="active" href="/">Bug Tracker</a>
  <a href="/bugs">DashBoard</a>
  <a href="/bugs/create">Create a Bug</a>
  <a href="/priorities">Manage Priorities</a>
  <a href="/statuses">Manage Status</a>

  {{else}}

  <a class="active" href="/">Bug Tracker</a>
  <a href="/bugs">DashBoard</a>

  {{/if}}
</div>

<div class="mynavbar" >
  <nav class="navbar navbar-expand-lg" style="background-color: #FC4445;">
    <div class="ms-auto navbar-nav">
