
<h1>Bugs Details</h1>
<form method="post">
    <fieldset>
        <label for="title" class="col-2">Title: *</label>
        <input name="title" id="title" required value="{{bug.title}}"/>
    </fieldset>
    <select name="priority" id="priority" required> 
            {{#each priorities}}
                <option>{{this.name}}</option>
            {{/each}} 
    </select>
    <fieldset>
        <label for="creator" class="col-2">Creator: *</label>
        <input name="creator" id="creator" required value="{{bug.creator}}"/>
    </fieldset>
    <select name="status" id="status" required> 
            {{#each statuses}}
                <option>{{this.name}}</option>
            {{/each}}
    </select>
    <fieldset>
        <label for="type" class="col-2">Type: *</label>
        <input name="type" id="type" required value="{{bug.type}}"/>
    </fieldset>
    <fieldset>
        <label for="description" class="col-2">Description: *</label>
        {{!-- <textarea name="description" id="description" required value="{{bug.description}}"></textarea> --}}
        <input name="description" id="description" required value="{{bug.description}}"/>
    </fieldset>
    <fieldset>
        <label for="solution" class="col-2">Solution: </label>
        <input name="solution" id="solution" value="{{bug.solution}}"></input>
    </fieldset>
    <button class="offset-2 btn btn-primary">Save</button>
</form>